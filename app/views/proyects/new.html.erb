<% if @proyect.errors.any? %>
	<ul>
		<% @proyect.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for @proyect, :html => { :multipart => true } do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<%= f.label :logo %>
	<%= f.file_field :logo %>

	<%= f.submit 'Save' %>

<% end %>